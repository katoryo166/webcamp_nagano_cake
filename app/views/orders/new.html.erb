<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>注文情報画面</h2>
      <%= form_with model:@order, url: new_order_path, local:true do |f| %>
        <div class="form_group">
          <h3>支払方法</h3>
          <%= f.radio_button :payment_method, Order.payment_methods.key(0)%>
          <%= f.label :payment_metho, Order.payment_methods_i18n[:credit_card] %>
          <%= f.radio_button :payment_method,Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>
        <div class="form_group">
          <h3>お届け先</h3>
          <span> </span><%= f.radio_button :a_method, 0 %>
          <%= f.label :ご自身の住所 %><br />
          <p>
            〒<%= @customer.postal_code %> <%= @customer.residence %><br />
            <%= @customer.first_name %><%= @customer.last_name %>
          </p>
          <span> </span><%= f.radio_button :a_method, 1 %>
          <%= f.label :登録済み住所から選択 %><br />
          <%= f.select :@addresses, options_from_collection_for_select(Address.all, :id, :address_display ) %><br />
          <span> </span><%= f.radio_button :a_method, 2 %>
          <%= f.label :新しいお届け先 %><br />
          <%= f.label :郵便番号（ハイフンなし）%><br />
          <%= f.text_field :postal_code %><br />
          <%= f.label :residence , '住所' %><br />
          <%= f.text_field :residence %><br />

          <%= f.label :name , '宛名' %><br />
          <%= f.text_field :name %>

        <div class="form_group">
          <%= f.submit "確認画面へ進む" %>
        </div>
      <% end %>
    </div>
  </div>
</div>