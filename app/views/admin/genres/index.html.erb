<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>ジャンル一覧・追加</h2>
      <p id="notice"><%= flash[:notice] %></p>
      <div class="form_group">
         <%= form_for @genre, :url => {:action => :create} do |f| %>
          <%= f.label :"ジャンル名" %>
          <%= f.text_field :name  %>
          <%= f.submit '新規登録' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
