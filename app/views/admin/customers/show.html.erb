<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
      <p id ="notice" class="text-success" ><%= flash[:notice] %></p>
      <div class="field">
      </div>
      <div class="field">
        <p>商品詳細 <%= @customer.first_name %><%= @customer.last_name %></p>
      </div>
      <div class="field">
        <p>フリガナ<%= @customer.kana_first_name %><%= @customer.kana_last_name %></p>
      </div>
      <div class="field">
        <p>郵便番号 <%= @customer.postal_code %></p>
      </div>
      <div class="field">
        <p>住所 <%= @customer.residence %></p>
      </div>
      <div class="field">
        <p>電話番号 <%=@customer.phone_number %></p>
      </div>
      <div class="field">
        <p>メールアドレス <%= @customer.email %></p>
      </div>
      <div class="field">
        <p>会員ステータス
          <% if @customer.is_active == true %>
            有効
          <% else @customer.is_active == false %>
            退会
          <% end %>
        </p>
      </div>
      <div class="actions">
        <%= link_to edit_admin_customer_path, class: "glyphicon glyphicon-pencil btn btn-success" do %>
          編集する
        <% end %>
        <%= link_to admin_orders_path, class: "glyphicon glyphicon-pencil btn btn-primary" do %>
          注文履歴一覧
        <% end %>
    </div>
    </div>
  </div>
</div>


