<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
      <%= form_with model: @customer, url:admin_customer_path, local: true do |f| %>
        <div class="field">
          <%= f.label :"名前", class: "col-sm-2 control-label" %>
          <%= f.label :first_name, "(姓)" %>
          <%= f.text_field :first_name, autofocus: true %>
          <%= f.label :last_name, "(名)" %>
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
          <%= f.label :kana_first_name, "（セイ）" %>
          <%= f.text_field :kana_first_name, autofocus: true %>
          <%= f.label :kana_last_name, "（メイ）" %>
          <%= f.text_field :kana_last_name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-2 control-label" %>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"住所", class: "col-sm-2 control-label" %>
          <%= f.text_field :residence, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"電話番号", class: "col-sm-2 control-label" %>
          <%= f.text_field :phone_number, autofocus: true %>
        </div>
        <div class="form_group">
          <%= f.label :"会員ステータス" %>
          <%= f.radio_button :is_active ,:true %>
          <%= f.label :"有効" %>
          <%= f.radio_button :is_active ,:false %>
          <%= f.label :"退会" %>
        </div>
        <div class="actions">
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    <div class="col-md-8 offset-md-1">

    </div>
    </div>
  </div>
</div>


