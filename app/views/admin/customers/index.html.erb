<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
    <h2>会員一覧</h2>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.first_name %><%= customer.last_name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active == true %>
      					<p class="text-success">有効</p>
      				<% elsif customer.is_active == false %>
      					<p class="text-danger">退会</p>
      				<% end %>
              </td>
              <td><%= link_to "詳細", admin_customer_path(customer.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>