<div class="row">
    <div class="col-xs-12 offset-md-1">
      <h2>注文履歴一覧</h2>
      <table class="table table-bordered table-condensed">
        <thead>
          <tr>
            <th>購入日</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do%>
                <%= order.created_at %>
              <% end %>
            </td>
            <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>

