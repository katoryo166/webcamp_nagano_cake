<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>商品詳細</h2>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="notice"><%= flash[:success] %></p>
      <div class="field">
        <%= attachment_image_tag @item, :image, format: 'jpeg', size: "100x100" %>
      </div>
      <div class="field">
        <p>商品詳細 <%= @item.name %></p>
      </div>
      <div class="field">
        <P>商品説明 <%= @item.introduction %></P>
      </div>
      <div class="field">
        <p>ジャンル <%= @item.genre.name %></p>
      </div>
      <div class="field">
        <p>税込価格（税抜価格） <%= @item.add_tax_price.to_s(:delimited) %>   （<%= @item.price %>）円</p>
      </div>
      <div class="field">
        <p>販売ステータス
          <% if @item.is_active == true %>
            販売中
          <% else @item.is_active == false %>
            販売停止中
          <% end %>
        </p>
      </div>
      <div class="field">
        <%= link_to edit_admin_item_path do %>
          編集する
        <% end %>
        <%= link_to admin_item_path(@item), method: :delete, "data-confirm" => "本当に削除しますか?" do %>
          削除
        <% end %>
      </div>
    </div>
  </div>
</div>



