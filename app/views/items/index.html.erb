<div class="row">
     <div class="col-md-10 offset-md-1">
          <h2>商品一覧</h2>
        </div>
    </div>
    <div class="border mb-4 mx-auto" style="width:100%"></div>
        <div class="row">
          <% @items.each do |item| %>
          <% if item.is_active == true %>
            <div class="col-sm-6 col-md-4 col-lg-3">
              <div class="card mb-3">
                <div class="card-body" >
                  <%= link_to item_path(item.id) do %>
                    <%= attachment_image_tag item, :image ,format: 'jpeg',class: "bd-placeholder-img card-img-top", size: "200x200" %>
                    <%= item.name %>
                  <% end %>
                <p>￥<%= item.price %></p>
                </div>
            </div>
          </div>
        <% end %>
        <% end %>
  </div>


