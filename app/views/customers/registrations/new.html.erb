  <div class="row">
  <div class="col-xs-12 col-md-10 offset-md-1">
  <h2>新規会員登録</h2>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field form-group col-xs-12">
          <%= f.label :"名前", class: "col-sm-2" %>
          <%= f.label :first_name, "(姓)", class:"col-sm-1" %>
          <%= f.text_field :first_name, autofocus: true , class: "col-sm-3" %>
          <%= f.label :last_name, "(名)", class:"col-sm-1" %>
          <%= f.text_field :last_name, autofocus: true, class: "col-sm-3" %>
        </div>
        <div class="field form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-2" %>
          <%= f.label :kana_first_name, "(セイ)", class:"col-sm-1" %>
          <%= f.text_field :kana_first_name, autofocus: true, class: "col-sm-3" %>
          <%= f.label :kana_last_name, "(メイ)", class:"col-sm-1" %>
          <%= f.text_field :kana_last_name, autofocus: true, class: "col-sm-3" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :"メールアドレス", class: "col-sm-4" %>
          <%= f.text_field :email, class: "col-sm-6"%>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :"郵便番号", autofocus: true, class: "col-sm-4" %>
          <%= f.text_field :postal_code, class: "col-sm-4" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :"住所", class: "col-sm-4" %>
          <%= f.text_field :residence, autofocus: true, class: "col-sm-7"  %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :"電話番号", class: "col-sm-4" %>
          <%= f.text_field :phone_number, class: "col-sm-4" %>
        </div>
        <div class="field">
          <%= f.label :password,  "パスワード（6文字以上）", class: "col-sm-4" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4" %>
        </div>

        <div class="field form-group col-xs-9">
          <%= f.label :"パスワード(確認用)", class: "col-sm-4" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4" %>
        </div>
        <div class="actions col-xs-9">
          <%= f.submit "新規登録" ,class: 'btn btn-success btn-xs col-xs-7' %>
        </div>
      <% end %>
        <div class="form-group col-xs-9">
          <h3>既に登録済みの方</h3>
          <p><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</p>
        </div>
    </div>
  </div>




