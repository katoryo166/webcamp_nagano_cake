<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"名前", class: "col-sm-2 control-label" %>
          <%= f.label :first_name, "(姓)" %>
          <%= f.text_field :first_name, autofocus: true %>
          <%= f.label :last_name, "(名)" %>
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
          <%= f.label :kana_first_name, "（セイ）" %>
          <%= f.text_field :kana_first_name, autofocus: true %>
          <%= f.label :kana_last_name, "（メイ）" %>
          <%= f.text_field :kana_last_name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-2 control-label" %>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"住所", class: "col-sm-2 control-label" %>
          <%= f.text_field :residence, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"電話番号", class: "col-sm-2 control-label" %>
          <%= f.text_field :phone_number, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :password,  "パスワード（6文字以上）" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation,  "パスワード（確認用）"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
        <div class="field">
          <h3>既に登録済みの方</h3>
          <p><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</p>
        </div>
      <% end %>



    </div>
  </div>
</div>




