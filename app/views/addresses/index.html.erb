<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>配送先登録/一覧</h2>
      <div class="col-md-8 offset-md-1">
        <%= form_with model:@address, url: addresses_path, local:true do |f| %>

        <div class="form_group">
          <%= f.label :postal_code , '郵便番号（ハイフンなし）' %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form_group">
          <%= f.label :residence , '住所' %>
          <%= f.text_field :residence %>
        </div>
        <div class="form_group">
          <%= f.label :name , '宛名' %>
          <%= f.text_field :name %>
        </div>
        <div class="form_group">
          <%= f.submit "新規登録" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.residence %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id) %>
                <%= link_to "削除する", address_path(address.id), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

